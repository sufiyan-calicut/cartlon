						</div>
					</div>
				</div>
			</div>
<div class="container col-sm-12 col-md-4 col-lg-3">
	.


		<div class="row isotope-grid" id="productCard" >
				
				<%products.forEach(function(products){%>
				<div class=" col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">	
					<!-- Block2 -->
					<div class="block2">
						
							<div class="block2">
								<div class="block2-pic hov-img0">
									<img src="/thumbnails/<%=products.image[0]%>" alt="" style="height: 346px; ;">
									
									<a href="/productdetails/<%=products._id%>" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
										Quick View
									</a>
								</div>
		
								<div class="block2-txt flex-w flex-t p-t-14">
									<div class="block2-txt-child1 flex-col-l ">
										<a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
											<%=products.productName%>
										</a>
		
										<span class="stext-105 cl3">
											<%=products.price%>
										</span>
									</div>
									<div style="position: absolute;
									right: 1rem;
									top: 24rem;
									z-index: 1;">
										<a  onclick="addToCart('<%=products._id %>','<%=products.price%>','<%=products.productName%>') "
											class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11  " >
											   <i class="zmdi zmdi-shopping-cart"></i>
											   </a>
			
										<% let inWishlist = wishlistItems.some(item => item._id.toString()
										=== products._id.toString() ) %>
										 <% if(inWishlist) { %>
	
										
										<button onclick="removeWishlist('<%=products._id %>')">
											<img class="icon-heart1 dis-block trans-04"
												src="/home-assets/images/icons/icon-heart-02.png" alt="ICON">
										</button>
	
										<% } else { %>
	
											<button onclick="addtoWishlist('<%=products._id %>')">
											<img class="icon-heart1 dis-block trans-04"
												src="/home-assets/images/icons/icon-heart-01.png" alt="ICON">
										</button>
	
										<% } %>
									</div>
									
								</div>
							</div>
				</div>
				</div>
				<%})%>
				
			</div>

			
		</div>
	
					<nav aria-label="...">
						<ul class="pagination pagination-md justify-content-center " style="align-self: unset;">
							 
							<% for( let i = 1 ; i <= pagination_count ; i++ ) { %> 
								<% if (current_page == i) { %> 
						<li class="page-item active mx-1"><a class="page-link pagination" href="/products/?page=<%= i %>"><%= i %></a></li>
						<% }else{ %>
							<li class="page-item mx-1 " ><a class="page-link pagination" href="/products/?page=<%= i %>"  style="border-radius: 10px;"><%= i %></a></li>
							<% } %>  
						<% } %> 
						
						</ul>
			 		 </nav>
		</div>
	</div>
		 
    
	
	
   
