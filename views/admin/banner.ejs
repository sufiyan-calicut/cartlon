<%-include('../admin/partials/admin-header.ejs') -%>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <%-include('../admin/partials/admin-sidebar.ejs') -%>  
        <!-- partial:../../partials/_sidebar.html -->
        
        <!-- start -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"> Banner </h3>
              <nav aria-label="breadcrumb">
                 
              </nav>
            </div>
            <div class="row">
             
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div>
                        <form action="/admin/addBanner" method="get">
                          <button style="margin-bottom: 10px; padding: 13px;" class="btn btn-success me-md-2" type="submit">Add Banner</button>
                        </form>
                      </div>
                 <div  style="overflow-x: auto;">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Index</th>
                        <th>Banner Name</th>
                        <th>Banner Image</th>
                        
                      </tr>
                    </thead>
                    <tbody>
                      <% banners.forEach(function(product,index){%>
                      <tr>
                          <td><%=index+1 %></td>
                        <td><%=product.bannerName%></td>
                       
                        <td><img src='/thumbnails/<%= product.image[0] %>' alt="" style="height: 50px; width: 60px; " ></td>
                     <td> <form action="/admin/editBanner/<%= product._id %> " method="post">
                      <button type="submit" class="badge badge-success" style="width: 65px;" onclick="return confirm('Are you sure you want to delete ?')"> Delete</button>
                    </form>
                     </td>
                    <td> <% if(product.block){%><form action="/admin/bannerUnblock/<%= product._id %> " method="post">
                      <button type="submit" class="badge badge-danger" style="width: 65px;"> Unblock</button>
                    </form>
                    <%}else{%><form action="/admin/bannerBlock/<%= product._id %> " method="post">
                      <button type="submit" class="badge badge-success" style="width: 65px;"> Block</button>
                    </form><%}%>  </td>
                      </tr>
                      <%})%>
                    </tbody>
                  </table>
                 </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->
          <footer class="footer">
            <div class="container-fluid d-flex justify-content-between">
              <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">Copyright Â© CodersBench.com</span>
              <span class="float-none float-sm-end mt-1 mt-sm-0 text-end">  <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank"></a> </span>
            </div>
          </footer>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/admin-assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/admin-assets/js/off-canvas.js"></script>
    <script src="/admin-assets/js/hoverable-collapse.js"></script>
    <script src="/admin-assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <!-- End custom js for this page -->
  </body>
</html>