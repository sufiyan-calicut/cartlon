        <%-include('../admin/partials/admin-sidebar.ejs') -%>
        <!-- start -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"> User Details </h3>
              <nav aria-label="breadcrumb">
                 
              </nav>
            </div>
            <div class="row">
             
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title"></h4>
                    <p class="card-description"> 
                    </p>
              <div style="overflow-x: auto;">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Index</th>
                      <th>User</th>
                      <th>Email</th>
                      <th></th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% user_view.forEach(function(user,index){%>
                    <tr>
                        <td><%=index+1 %></td>
                      <td><%=user.name%></td>
                      <td><%=user.email%></td>
                      <td class="text-danger"> </td>
                      <!-- <td><a href="#"><label class="badge badge-outline-danger">Pending</label></a></td> -->
                   <td> <% if(user.block){%><form action="/admin/unblock/<%= user._id %> " method="post">
                    <button type="submit" class="badge badge-danger" style="width: 65px;"> UnBlock</button>
                  </form>
                  <%}else{%><form action="/admin/block/<%= user._id %> " method="post">
                    <button type="submit" class="badge badge-success" style="width: 65px;"> Block</button>
                  </form><%}%>  </td>
                    </tr>
                    <%})%>
                  </tbody>
                </table>
              </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->
